# --- Application Ports ---
STREAMLIT_PORT=8501
MLFLOW_PORT=5000
AIRFLOW_PORT=8080
POSTGRES_PORT=5432

# --- Postgres (Airflow metadata) ---
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# --- Airflow settings ---
# Use a stable uid/gid for file permissions on Linux hosts
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Security keys (change in production)
# Generate a random 32-byte urlsafe base64 Fernet key for encryption
# You can regenerate via: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW__CORE__FERNET_KEY=
# Any random string; keep secret in prod
AIRFLOW__WEBSERVER__SECRET_KEY=

# B2 Credentials
B2_BUCKET=
B2_KEY_ID=
B2_APPLICATION_KEY=
B2_ENDPOINT=
B2_REGION=

# AWS-compatible environment variables (for boto3/DVC)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_ENDPOINT_URL=
AWS_DEFAULT_REGION=

# MLflow Configuration
MLFLOW_TRACKING_URI=
MLFLOW_S3_ENDPOINT_URL=

# DVC Configuration
DVC_REMOTE=